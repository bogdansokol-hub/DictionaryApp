<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DictionaryApp.MainPage"
             BackgroundColor="Black">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Entry Placeholder="Ala ma Kota" Text="{Binding NewWord}" />
        <Button Text="Add" Command="{Binding AddWordCommand}"/>

        <Entry Placeholder="Search" Text="{Binding SearchQuery}" />

        <CollectionView ItemsSource="{Binding Words}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding}" FontSize="18" TextColor="White" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>
